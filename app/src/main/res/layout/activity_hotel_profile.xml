<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HotelProfile">
    <!--============================Image and Info=======================-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/food_art"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
        <View
            android:id="@+id/overlay_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".5"
            android:background="#000000"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/rabina"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Namaste Hotel"
                    style="@style/HotelProfileName"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9868045454"
                    style="@style/HotelProfileName.phonenumber"/>
                    
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!--============================ khana khaja =======================-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A6C462"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Khana"
                android:textAllCaps="false"
                style="@style/HotelProfileName.catagoryOnclick"
                android:background="@drawable/khana_category_onclick"
                android:layout_marginLeft="10dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Khana"
                android:textAllCaps="false"
                style="@style/HotelProfileName.catagory"
                android:background="@drawable/khana_catagory"
                android:layout_marginLeft="10dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Khana"
                android:textAllCaps="false"
                style="@style/HotelProfileName.catagory"
                android:background="@drawable/khana_catagory"
                android:layout_marginLeft="10dp"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Khana"
                android:textAllCaps="false"
                style="@style/HotelProfileName.catagory"
                android:background="@drawable/khana_catagory"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A6C462"/>


    <!--============================ khana khaja =======================-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hotel_profile_food_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>