<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a6c462"
    tools:context=".SignUpAdditional">

    <ScrollView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/signIn_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Logo"
                android:layout_centerInParent="true">
                <!--=======================SignIn Body   ================================-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/login_text_fullSection"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#465431"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/owner_photo"
                                style="@style/editText_signin_signup"
                                android:layout_width="120dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="15dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_profile_pic" />

                            <ProgressBar
                                android:id="@+id/progressbar_HotelImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:visibility="gone"/>
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/hotel_name"
                            style="@style/editText_signin_signup"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="User Name" />

                        <EditText
                            android:id="@+id/hotel_phoneNumber"
                            style="@style/editText_signin_signup"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="Phone Numer(For User)" />

                        <EditText
                            android:id="@+id/college_around"
                            style="@style/editText_signin_signup"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="25dp"
                            android:hint="College" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--=======================Sign in mathi wala ================================-->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="295dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:id="@+id/signUp_Button_additional"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:background="#543146"
                        android:gravity="center">

                        <TextView
                            style="@style/SignInAndSignUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign Up"
                            android:textSize="20dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>